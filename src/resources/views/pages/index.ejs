            </h2>

            <div class="manh-movie">
                <div class="container text-center">
                    <div class="row">
                        <div class="col manh-flex">
                        <% if (movies.items.length > 0) { %>
                            <% movies.items.forEach(movie => { %>
                                <div class="card computer-card">
                                    <a href="/<%= movie.slug %>" class="card-inner">
                                        <div class="card-front">
                                            <img src="<%= movie.poster_url %>" style="height: 20rem; border-radius: 0.5rem;" class="card-img-top" alt="<%= movie.name %>">
                                        </div>
                                        <div class="card-back">
                                            <h5 class="card-title-back"><%= movie.name %></h5>
                                            <p class="card-text"><%= movie.origin_name %></p>
                                        </div>
                                    </a>
                                </div>

                                <a href="/<%= movie.slug %>" class="card mobile-card">
                                    <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.name %>" style="height: 20rem; border-radius: 0.5rem;">
                                    <h5 class="card-title"><%= movie.name %></h5>
                                </a>
                        <% }) %>
