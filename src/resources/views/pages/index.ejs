    <% if (successMessage) { %>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                var myModal = new bootstrap.Modal(document.getElementById('exampleModalToggle'));
                myModal.show();
                document.querySelector(".text-success").style.display = "block";
            });
        </script>
    <% } %>
    <% if (errorMessage) { %>
